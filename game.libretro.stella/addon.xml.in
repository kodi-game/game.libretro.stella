<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.stella"
		name="Atari - 2600 (Stella 2014)"
		version="3.9.3.21"
		provider-name="Stephen Anthony, Bradford Mott, Eckhard Stolberg, Brian Watson">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
		<import addon="game.controller.atari.2600" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms>Atari 2600</platforms>
		<extensions>a26|bin</extensions>
		<supports_vfs>true</supports_vfs>
		<supports_standalone>false</supports_standalone>
		<requires_opengl>false</requires_opengl>
	</extension>
	<extension point="xbmc.addon.metadata">
		<license>GPLv2</license>
		<platform>@PLATFORM@</platform>
		<source>https://github.com/kodi-game/game.libretro.stella</source>
		<assets>
			<icon>resources/icon.png</icon>
			<screenshot>resources/screenshot-01.jpg</screenshot>
			<screenshot>resources/screenshot-02.jpg</screenshot>
			<screenshot>resources/screenshot-03.jpg</screenshot>
		</assets>
		<disclaimer>Stella was originally developed for Linux by Bradford W. Mott, and is currently maintained by Stephen Anthony.</disclaimer>
		<summary lang="en_GB">Atari - 2600 (Stella 2014) 3.9.3</summary>
		<description lang="en_GB">Supafaust is a SNES emulator for multicore ARM Linux platforms. It&#39;s particularly suitable for low-end devices.</description>
	</extension>
</addon>
